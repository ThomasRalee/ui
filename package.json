{
  "name": "root",
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "husky": "^8.0.2",
    "lerna": "^6.6.1",
    "publish:stable": "lerna publish --conventional-commits --conventional-graduate --dist-tag latest",
    "publish:dev": "lerna publish --conventional-commits --conventional-graduate --preid beta --canary --dist-tag next"
  },
  "scripts": {
    "prepare": "husky install",
    "publish": "lerna publish",
    "build": "lerna run build"
  },
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint"
    ]
  },
  "version": "0.0.1"
}
